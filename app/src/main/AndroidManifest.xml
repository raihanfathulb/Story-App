        android:supportsRtl="true"
        android:theme="@style/Theme.StoryApp_Kotlin">

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyCjjPihU38TxSou16U6HYHOYkkZzxzwDVw" />

        <activity
            android:name=".view.auth.AuthActivity"
            android:exported="false" />
        <activity
            android:name=".view.create.CreateActivity"
            android:exported="false" />
        <activity
            android:name=".view.detail.DetailActivity"
            android:exported="false"
